@page "{handler?}"
@model PersonalStylistIA.Pages.Recommendations.IndexModel

@{
    ViewData["Title"] = "Recomendações de Estilo IA";
}

<div class="content-expanded">
    <header class="recommendation-header">
        <h1>📝 Recomendações de Estilo IA</h1>
        <p>Descreva a ocasião e receba sugestões personalizadas</p>
    </header>

    <!-- FORMULÁRIO -->
    <form method="post" asp-page-handler="Generate">
        <div class="input-section">
            <textarea asp-for="UserInput"
                      placeholder="Ex: Look para formatura noturna, roupa casual para date no parque..."
                      maxlength="500"
                      rows="4"></textarea>

            <span asp-validation-for="UserInput" class="text-danger"></span>

            <div class="input-options">
                <select asp-for="StyleSelected">
                    <option value="Casual">Estilo: Casual</option>
                    <option value="Formal">Estilo: Formal</option>
                    <option value="Esportivo">Estilo: Esportivo</option>
                    <option value="Elegant">Estilo: Elegante</option>
                </select>

                <button type="submit" class="generate-btn" id="generateBtn">
                    <span>✨ Gerar Recomendações</span>
                </button>
            </div>
        </div>
    </form>

    <!-- ESTADOS DINÂMICOS -->
    <div class="results-container">

        @* Estado de carregamento *@
        @if (Model.IsLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Gerando recomendação personalizada...</p>
            </div>
        }

        @* Estado de erro *@
        @if (Model.HasError)
        {
            <div class="error-state">
                <div class="error-icon">⚠️</div>
                <p>@(string.IsNullOrEmpty(Model.ErrorMessage) ? "Erro ao gerar recomendação." : Model.ErrorMessage)</p>
                <button class="retry-btn" type="button" onclick="document.querySelector('form').reset(); location.reload();">
                    Tentar novamente
                </button>
            </div>
        }

        @* Resultado *@
        @if (!string.IsNullOrEmpty(Model.RecommendationResult) && !Model.HasError)
        {
            <div class="recommendation-card">
                <div class="card-header">
                    <span class="occasion-tag">✨ Recomendação</span>
                    <button type="button" class="button" onclick="saveRecommendation()">💾</button>
                </div>

                <div class="recommendation-content">
                    <p>@Html.Raw(Model.RecommendationResult.Replace("\n", "<br>"))</p>
                </div>

                <div class="card-footer">
                    <small>Gerado agora</small>
                </div>
            </div>
        }

    </div>
</div>

<script>
    function saveRecommendation() {
        alert('Recomendação salva com sucesso! ✅');
        // Aqui você pode implementar a lógica de salvar no banco
    }

    document.getElementById('generateBtn').addEventListener('click', function() {
        const textarea = document.querySelector('textarea');
        if (textarea.value.trim().length < 10) {
            alert('⚠️ Por favor, descreva a ocasião com mais detalhes!');
            return false;
        }
    });
</script>