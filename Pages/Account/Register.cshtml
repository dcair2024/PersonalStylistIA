@page
@model PersonalStylistIA.Pages.Account.RegisterModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Cadastro - Personal Stylist IA";
}

<div class="content-card">
    <header style="text-align:center; margin-bottom: 1rem;">
        <h1 style="color: var(--primary-blue); font-family: var(--font-heading); margin-bottom: 0.25rem;">Personal Stylist IA</h1>
        <nav style="display:flex; justify-content:center; gap:1.5rem; border-bottom: 0px; padding-bottom:0.5rem; margin-bottom: 0.75rem;">
            <a href="/Account/Login" style="color:var(--muted-2);">Login</a>
            <a href="/Account/Register" class="active" style="color:var(--primary-blue); font-weight:600;">Cadastro</a>
        </nav>
        <h2 style="color: var(--muted-2); font-weight:300; font-size:1.05rem;">Crie sua conta</h2>
        <div class="divider"></div>
    </header>

    <article>
        <form method="post" id="registerForm">
            <div asp-validation-summary="All" class="text-danger" style="margin-bottom: 1rem; text-align:center; font-weight:600;"></div>

            <div style="margin-bottom: 1rem;">
                <label for="Nome"><span style="color:var(--error-red)">*</span></label>
                <input id="Nome" name="Nome" type="text" required placeholder="Seu nome e sobrenome" />
            </div>

            <div style="margin-bottom: 1rem;">
                <label for="Email"><span style="color:var(--error-red)">*</span></label>
                <input id="Email" name="Email" type="email" required placeholder="seu.email@exemplo.com" />
            </div>

            <div style="margin-bottom: 1rem;">
                <label for="Password"><span style="color:var(--error-red)">*</span></label>
                <small style="display:block; color:var(--muted-2); margin-bottom:0.5rem;">Mínimo de 6 caracteres</small>
                <input id="Password" name="Password" type="password" required minlength="6" placeholder="••••••••" />
            </div>

            <div style="margin-bottom: 1.25rem;">
                <label for="ConfirmPassword"><span style="color:var(--error-red)">*</span></label>
                <input id="ConfirmPassword" name="ConfirmPassword" type="password" required placeholder="Repita sua senha" />
            </div>

            <button type="submit" class="contrast" style="width:100%; background-color:var(--accent-orange); border-radius:6px; padding:0.9rem; font-weight:700;">Criar Conta</button>
        </form>

        <div style="margin-top: 1rem; text-align:center;">
            <a href="/Account/Login">← Voltar para Login</a>
        </div>
    </article>
</div>

<script>
    document.getElementById('registerForm').addEventListener('submit', function(e) {
        const formData = new FormData(this);
        console.log('🟡 FORM DATA:');
        for (let [key, value] of formData.entries()) {
            console.log(key + ': ' + value);
        }
    });
</script>
<style>
    /* ===== CORREÇÃO: estilo da página de login (sem erros de sintaxe) ===== */

    .error-banner {
        /* Mantém a estrutura de bloco para animação e alinhamento */
        display: block;
        text-align: center;
        margin-bottom: 1rem;
        padding: 0;
        border: none;
        background-color: transparent;
        animation: fadeIn 0.25s ease-in;
    }

        /* Remove bullet e padding do ul gerado pelo asp-validation-summary */
        .error-banner ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            /* Estilo dos itens de erro */
            .error-banner ul li {
                color: #a10000;
                font-weight: 700;
                font-size: 1.05rem;
            }

    /* Keyframes corretos (sem @@ e sem blocos extras) */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-4px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Campos do card */
    .content-card input,
    .content-card select,
    .content-card button {
        width: 100%;
        box-sizing: border-box;
    }

    .content-card form > div {
        margin-bottom: 1rem;
    }

    /* Botões adaptativos */
    .content-card button {
        padding: 0.8rem;
        font-size: 1rem;
    }

    /* Títulos responsivos */
    .content-card h1 {
        font-size: 1.6rem;
    }

    .content-card h2 {
        font-size: 1.1rem;
    }
</style>
