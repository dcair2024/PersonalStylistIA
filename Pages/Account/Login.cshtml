@page
@model PersonalStylistIA.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login - Personal Stylist IA";
}

<div class="content-card">
    <header style="text-align:center; margin-bottom: 1rem;">
        <h1 style="color: var(--primary-blue); font-family: var(--font-heading); margin-bottom: 0.25rem;">Personal Stylist IA</h1>
        <h2 style="color: var(--muted-2); font-weight:300; font-size:1.05rem;">Acesse sua conta</h2>
        <div class="divider"></div>
    </header>

    <article>

        @* CORREÇÃO: Usando a Tag Helper nativa para Validation Summary *@
        <div asp-validation-summary="All" class="error-banner"></div>

        <form method="post">

            <div style="margin-bottom: 1.25rem;">
                @* CORREÇÃO: Usando Input.Email *@
                <label asp-for="Input.Email"><span style="color:var(--error-red)">*</span></label>
                <input asp-for="Input.Email" type="email" required placeholder="seu.email@exemplo.com" />
                <span asp-validation-for="Input.Email" class="error" style="color:var(--error-red)"></span>
            </div>

            <div style="margin-bottom: 1.75rem;">
                @* CORREÇÃO: Usando Input.Password *@
                <label asp-for="Input.Password"><span style="color:var(--error-red)">*</span></label>
                <small style="display:block; color: var(--muted-2); margin-bottom:0.5rem;">Mínimo de 6 caracteres</small>
                <input asp-for="Input.Password" type="password" required placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="error" style="color:var(--error-red)"></span>
            </div>

            <div style="margin-bottom: 1.25rem; text-align:center;">
                <a href="/RecuperarSenha">Esqueceu a senha?</a>
            </div>

            <button type="submit" class="contrast" style="width:100%; background-color:var(--accent-orange); border-radius:6px; padding:0.9rem; font-weight:700;">Entrar</button>
        </form>

        <div style="margin-top: 1rem; text-align:center;">
            <a asp-page="/Account/Register">Não tem conta? Cadastre-se</a>
        </div>
        <div style="margin-top: 0.75rem; text-align:center;">
            <small style="color:var(--error-red);">* Campos obrigatórios</small>
        </div>
    </article>
</div>

@* BLOCO ESSENCIAL PARA HABILITAR A VALIDAÇÃO NO NAVEGADOR *@
@section Scripts {
    @{
        // Carrega os scripts de validação que permitem que os erros apareçam imediatamente no front-end
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>

    .error-banner {
        /* Mantém a estrutura de bloco para animação e alinhamento */
        display: block;
        text-align: center;
        margin-bottom: 1rem;
        /* Remove estilos de fundo e borda da caixa, conforme solicitado */
        padding: 0;
        border: none;
        background-color: transparent;
        /* Mantém a animação */
        animation: fadeIn 0.25s ease-in;
    }


        /* Força a remoção do bullet point e padding interno do <ul> */
        .error-banner ul {
            list-style: none; /* Remove a bolinha */
            padding: 0; /* Remove o padding padrão da lista */
            margin: 0; /* Remove a margem padrão da lista */
        }

            /* Aplica Vermelho e Negrito diretamente ao texto da lista (o erro) */
            .error-banner ul li {
                color: #a10000; /* Vermelho forte */
                font-weight: 700; /* Negrito */
                font-size: 1.05rem; /* Ajusta o tamanho da fonte, se necessário */
            }


    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-4px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .content-card input,
    .content-card select,
    .content-card button {
        width: 100%;
        box-sizing: border-box;
    }

    .content-card form > div {
        margin-bottom: 1rem;
    }

    /* Botões adaptativos */
    .content-card button {
        padding: 0.8rem;
        font-size: 1rem;
    }

    /* Títulos responsivos */
    .content-card h1 {
        font-size: 1.6rem;
    }

    .content-card h2 {
        font-size: 1.1rem;
    }