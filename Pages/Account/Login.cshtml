@page
@model PersonalStylistIA.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login - Personal Stylist IA";
}

<div class="content-card">
    <header style="text-align:center; margin-bottom: 1rem;">
        <h1 style="color: var(--primary-blue); font-family: var(--font-heading); margin-bottom: 0.25rem;">Personal Stylist IA</h1>
        <h2 style="color: var(--muted-2); font-weight:300; font-size:1.05rem;">Acesse sua conta</h2>
        <div class="divider"></div>
    </header>

    <article>
        <div asp-validation-summary="ModelOnly" class="error" style="color:var(--error-red); margin-bottom:1rem;"></div>

        <form method="post">
            <div style="margin-bottom: 1.25rem;">
                <label asp-for="Email"><span style="color:var(--error-red)">*</span></label>
                <input asp-for="Email" type="email" required placeholder="seu.email@exemplo.com" />
                <span asp-validation-for="Email" class="error" style="color:var(--error-red)"></span>
            </div>
            <div style="margin-bottom: 1.75rem;">
                <label asp-for="Password"><span style="color:var(--error-red)">*</span></label>
                <small style="display:block; color: var(--muted-2); margin-bottom:0.5rem;">Mínimo de 6 caracteres</small>
                <input asp-for="Password" type="password" required placeholder="••••••••" />
                <span asp-validation-for="Password" class="error" style="color:var(--error-red)"></span>
            </div>
            <div style="margin-bottom: 1.25rem; text-align:center;">
                <a href="/RecuperarSenha">Esqueceu a senha?</a>
            </div>
            <button type="submit" class="contrast" style="width:100%; background-color:var(--accent-orange); border-radius:6px; padding:0.9rem; font-weight:700;">Entrar</button>
        </form>

        <div style="margin-top: 1rem; text-align:center;">
            <a asp-page="/Account/Register">Não tem conta? Cadastre-se</a>
        </div>
        <div style="margin-top: 0.75rem; text-align:center;">
            <small style="color:var(--error-red);">* Campos obrigatórios</small>
        </div>
    </article>
</div>

<style>
    .content-card input,
    .content-card select,
    .content-card button {
        width: 100%;
        box-sizing: border-box;
    }

    .content-card form > div {
        margin-bottom: 1rem;
    }

    /* Botões adaptativos */
    .content-card button {
        padding: 0.8rem;
        font-size: 1rem;
    }

    /* Títulos responsivos */
    .content-card h1 {
        font-size: 1.6rem;
    }

    .content-card h2 {
        font-size: 1.1rem;
    }

    @@media (max-width: 600px) {
        .content-card

    {
        padding: 1rem;
        border-radius: 8px;
    }

    .content-card h1 {
        font-size: 1.4rem;
    }

    .content-card h2 {
        font-size: 1rem;
    }

    }
</style>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
