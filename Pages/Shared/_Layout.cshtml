@using Microsoft.AspNetCore.Identity
@using PersonalStylistIA.Models
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - PersonalStylistIA</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@picocss/pico@1/css/pico.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/buttons-fix.css" asp-append-version="true" />


    
    @RenderSection("HeadExtras", required: false)
</head>

<body>
    <header>
        <div class="navbar">
            <div class="brand">Personal Stylist IA</div>

            <nav class="nav-links" role="navigation">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    var user = await UserManager.GetUserAsync(User);
                    var nomeExibicao = user?.NomeCompleto ?? User.Identity?.Name ?? "Usuário";
                    var primeiroNome = nomeExibicao?.Split(' ')[0] ?? nomeExibicao;

                    <span class="muted">Olá, @primeiroNome!</span>
                    <a asp-page="/Index">🏠 Início</a>
                    <a asp-page="/Recommendations/Index">💡 Recomendações</a>
                    <form method="post" asp-page="/Account/Logout" style="display:inline;">
                        <button type="submit" class="logout">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-page="/Index">🏠 Início</a>
                    <a asp-page="/Recommendations/Index">💡 Recomendações</a>
                    <a asp-page="/Privacy">🔒 Privacy</a>
                    <a asp-page="/Account/Login">👤 Login</a>
                    <a asp-page="/Account/Register" class="contrast outline">📝 Cadastrar</a>
                }
            </nav>

            <div class="burger" aria-label="Abrir menu" aria-expanded="false">☰</div>
        </div>
    </header>

    <main class="page-wrapper">
        @RenderBody()
    </main>

    <footer>
        <p>&copy; 2025 - Personal Stylist IA - <a asp-page="/Privacy">Privacy</a></p>
        <a asp-page="/Recommendations/Index">Recomendações</a>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/zoom.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/js/burger.js" asp-append-version="true"></script>
    <script defer src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("ExtraScripts", required: false)



</body>
</html>